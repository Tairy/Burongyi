extends layout

block content

  if !locals.user 
    div.alert.alert-danger 
      a(href="/login") 登录
      |后才能添加背景
  else
    form(id="post_form" action="/addcolor", method="post", role="form")
      if locals.success
        div.alert.alert-success #{locals.success}
      if locals.error
        div.alert.alert-danger #{locals.error}
      label 背景色:
      input(type="text", placeholder="分类名称", name="name",).form-control
      br
      button(type="submit").btn.btn-success 提交